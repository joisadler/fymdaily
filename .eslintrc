{
  "parser": "@babel/eslint-parser",
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "import"],
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "mongo": true
  },
  "rules": {
    "no-restricted-globals": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "camelcase": 0,
    "max-len": [
      "warn",
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "prettier/prettier": [
      "error", {
        "singleQuote": true,
        "semi": true
      }
    ]
  }
}