{
  "name": "fymdaily-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node -r dotenv/config ./dist/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "watch:dev": "nodemon",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "test": "jest",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "bcrypt-nodejs": "0.0.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "~1.4.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "fatsecret": "^1.0.2",
    "helmet": "^4.1.0",
    "http-errors": "^1.8.0",
    "mongoose": "^5.10.3",
    "mongoose-findorcreate": "^3.0.0",
    "morgan": "~1.9.1",
    "nodemailer": "^6.4.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pingmydyno": "^1.5.1",
    "pug": "^3.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.11.5",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0",
    "stylelint": "^13.7.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": "12.x"
  }
}
